<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Channel Subscription Servlets</display-name>
   <context-param>
     <param-name>BDBstore</param-name>
     <param-value>/home/cis455/workspace/HW2</param-value>
   </context-param>
    
   <servlet>
     <servlet-name>xpath</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XPathServlet</servlet-class> 
   </servlet>
   
   <servlet>
   	 <servlet-name>welcome</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.LoginServlet</servlet-class>
   </servlet>
   
   <servlet>
     <servlet-name>logout</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.LogoutServlet</servlet-class>
   </servlet>
   
   <servlet>
   	 <servlet-name>signup</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.SignupServlet</servlet-class>
   </servlet>
   
   <servlet>
   	 <servlet-name>user</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.UserServlet</servlet-class>
   </servlet>
   
   <servlet>
     <servlet-name>delete</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.DeleteChannelServlet</servlet-class>
   </servlet>
   
   <servlet>
     <servlet-name>display</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.DisplayServlet</servlet-class>
   </servlet>
   
   <servlet>
     <servlet-name>subscribe</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.SubscribeServlet</servlet-class>
   </servlet>
   
   <servlet>
     <servlet-name>unsubscribe</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.UnsubscribeServlet</servlet-class>
   </servlet>
   
   <servlet>
   	 <servlet-name>channels</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.ChannelsServlet</servlet-class>
   </servlet>
    
   <servlet-mapping>
     <servlet-name>xpath</servlet-name>
     <url-pattern>/xpath</url-pattern>
   </servlet-mapping> 
   
   <servlet-mapping>
   	 <servlet-name>welcome</servlet-name>
   	 <url-pattern>/</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>logout</servlet-name>
     <url-pattern>/logout</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	 <servlet-name>signup</servlet-name>
   	 <url-pattern>/signup</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>user</servlet-name>
     <url-pattern>/user</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>display</servlet-name>
     <url-pattern>/display</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>subscribe</servlet-name>
     <url-pattern>/subscribe</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>unsubscribe</servlet-name>
     <url-pattern>/unsubscribe</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>delete</servlet-name>
     <url-pattern>/delete</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>channels</servlet-name>
     <url-pattern>/channels</url-pattern>
   </servlet-mapping> 
   
   <servlet-mapping>
     <servlet-name>default</servlet-name>
     <url-pattern>/rss/*</url-pattern>
   </servlet-mapping>

   <!-- add any additional servlets and servlet mappings here -->

</web-app>
